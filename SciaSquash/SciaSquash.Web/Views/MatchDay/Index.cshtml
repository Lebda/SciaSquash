@using System.Web.Mvc.Html;
@using IdenityHelp.ViewModels.Shared;

@model IEnumerable<SciaSquash.Model.Entities.MatchDay>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.Partial("CreateActionLinkEasyPartial", new CreateActionLinkEasyViewModel("Create match day", User, "MatchDay", null))
</p>

@foreach (var item in Model)
{
    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading">@Html.DisplayNameFor(model => model.MatchDate) @Html.DisplayFor(modelItem => item.MatchDate)</div>
        <div class="panel-body">
            Games played in match day <br/>
            <p>
                @Html.Partial("CreateActionLinkEasyPartial", new CreateActionLinkEasyViewModel("Create match", User, "Match", new { matchDayID = item.MatchDayID }))
            </p>
        </div>
        @Html.Partial("MatchIndexPartial", new SciaSquash.Web.ViewModels.Match.MatchIndexViewModel { Matches = item.Matches, ShowMatchDateColumn = false })
    </div>
}

