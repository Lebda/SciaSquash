@model SciaSquash.Web.ViewModels.Player.LeaderViewModel



<div class="container">
    <div class="row text-center">
        <div class="col-md-12">
            @if (Model.Leader.Player.ImageData != null)
            {
                            <img width="150" height="150" src="@Url.Action("GetImage", "Player", new { id = Model.Leader.Player.PlayerID })" />
            }
        </div>
    </div>
    <div class="row text-center">
        <div class="col-md-12">
            <h2>@Html.DisplayFor(item => Model.Leader.Player.NickName)</h2>
            <br>
            <span class="label label-danger">Actual point score</span>
            <br>
            <h3>
                @Html.Encode(Model.Leader.Points)<small>pt</small>
            </h3>
            <br>
            <span class="label label-danger">@Html.DisplayNameFor(model => model.Leader.Player.SpecialPower)</span>
            <br>
            <h3>@Html.DisplayFor(model => model.Leader.Player.SpecialPower)</h3>
        </div>
    </div>  

</div>
