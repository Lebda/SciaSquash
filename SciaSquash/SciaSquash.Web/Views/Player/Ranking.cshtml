@model SciaSquash.Web.ViewModels.Player.RankingViewModel



<div class="container">

    @foreach (var item in Model.Items)
    {
        <div class="row text-center">
            <div class="col-md-2">
                @if (item.Player.ImageData != null)
                {
                            <img width="50" height="50" src="@Url.Action("GetImage", "Player", new { id = item.Player.PlayerID })" />
                }
            </div>
            <div class="col-md-5">
                <h3>@Html.DisplayFor(modelItem => item.Player.NickName)</h3>
            </div>
            <div class="col-md-5">
                <h3>@Html.Encode(item.Points)</h3>
                <div class="row text-center">
                    <div class="col-md-12">
                        <span class="badge">@Html.Encode(item.ScrorePlus)</span> : <span class="badge">@Html.Encode(item.ScoreMinus)</span>
                    </div>
                </div>
            </div>

        </div>
        <hr />
    }
</div>

