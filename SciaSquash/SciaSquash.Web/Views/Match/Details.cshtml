@model SciaSquash.Model.Entities.Match

@{
    ViewBag.Title = "Details";
}

<div>
    <hr />
    <div class="panel panel-primary">
        <div class="panel-heading">@Html.DisplayNameFor(model => model.MatchDay.MatchDate) @Html.DisplayFor(model => model.MatchDay.MatchDate)</div>
        <div class="panel-body">

            <div class="container">

                <div class="row text-center">
                    <div class="col-md-4">
                        @if (Model.FirstPlayer.ImageData != null)
                        {
                                                    <img width="150" height="150" src="@Url.Action("GetImage", "Player", new { id = Model.FirstPlayer.PlayerID })" />
                        }
                    </div>
                    <div class="col-md-4">
                        <h1>@Html.Encode(Model.ScorePlayerFirst) : @Html.Encode(Model.ScorePlayerSecond)</h1>
                    </div>
                    <div class="col-md-4">
                        @if (Model.SecondPlayer.ImageData != null)
                        {
                                                    <img width="150" height="150" src="@Url.Action("GetImage", "Player", new { id = Model.SecondPlayer.PlayerID })" />
                        }
                    </div>
                </div>

                <div class="row text-center">
                    <div class="col-md-4">
                        <h1>@Html.DisplayFor(model => model.FirstPlayer.NickName)</h1>
                    </div>
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-4">
                        <h1>@Html.DisplayFor(model => model.SecondPlayer.NickName)</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MatchID }) |
    @Html.ActionLink("Back to match day", "Index", "MatchDay")
</p>
